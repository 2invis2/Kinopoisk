<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_description"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignParentTop = "true"
        android:layout_alignParentLeft = "true"/>

    <ImageView
        android:id="@+id/image_description"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="?attr/actionBarDivider"
        android:layout_below="@+id/toolbar_description"
        android:layout_alignParentLeft = "true"
        />

    <TextView
        android:id="@+id/name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/toolbar_description"
        android:layout_toRightOf="@+id/image_description"/>

    <TextView
        android:id="@+id/year_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/name_description"
        android:layout_toRightOf="@+id/image_description"/>

    <TextView
        android:id="@+id/rating_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/year_description"
        android:layout_toRightOf="@+id/image_description"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/image_description"
        android:layout_alignParentLeft="true"/>


</RelativeLayout>